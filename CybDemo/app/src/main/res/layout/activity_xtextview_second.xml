<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF4FF">

    <cyb.xandroid.view.XTextView
        android:id="@+id/btn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="5dp"
        android:text="按压变色"
        android:textColor="@color/black"
        android:visibility="gone"
        app:corner="10dp"
        app:isShowState="true"
        app:pressBgColor="@color/red"
        app:pressTextColor="@color/white"
        app:solid="@color/opacity_5_red"
        app:state_drawable="@drawable/emoji_kiss"
        app:state_drawable_height="50dp"
        app:state_drawable_mode="center"
        app:state_drawable_width="50dp" />

    <cyb.xandroid.view.XTextView
        android:id="@+id/btn_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="5dp"
        android:text="圆角图"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:corner="15dp"
        app:drawableAsBackground="true"
        app:pressBgColor="@color/black"
        app:pressTextColor="@color/white"
        app:solid="@color/black"
        app:state_drawable="@drawable/avatar1" />

    <cyb.xandroid.view.XTextView
        android:id="@+id/btn_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btn_2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="5dp"
        android:text="图片+边框"
        android:textColor="@color/pink"
        app:corner="10dp"
        app:drawableAsBackground="true"
        app:isShowState="true"
        app:state_drawable="@drawable/avatar3"
        app:stroke_color="@color/pink"
        app:stroke_width="4dp" />

    <cyb.xandroid.view.XTextView
        android:id="@+id/btn_4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="5dp"
        android:text="圆形图片"
        android:textColor="@color/white"
        app:corner="50dp"
        app:drawableAsBackground="true"
        app:isShowState="true"
        app:solid="@color/white"
        app:state_drawable="@drawable/avatar4"
        app:stroke_color="#F4E187"
        app:stroke_width="4dp" />

    <cyb.xandroid.view.XTextView
        android:id="@+id/stv_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="半圆角图"
        android:textColor="@color/pink"
        android:textSize="16dp"
        android:textStyle="bold"
        app:corner="25dp"
        app:drawableAsBackground="true"
        app:solid="@color/purple"
        app:state_drawable="@drawable/bige2" />

    <cyb.xandroid.view.XTextView
        android:id="@+id/btn_5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/stv_1"
        android:layout_marginRight="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/avatar7"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="5dp"
        android:text="Drawable2"
        android:textColor="@color/black"
        app:isShowState="true"
        app:isShowState2="true"
        app:pressTextColor="@color/white"
        app:state_drawable="@drawable/triangle"
        app:state_drawable2="@drawable/recousers"
        app:state_drawable2_height="20dp"
        app:state_drawable2_mode="rightTop"
        app:state_drawable2_width="20dp"
        app:state_drawable_height="20dp"
        app:state_drawable_mode="leftTop"
        app:state_drawable_width="20dp" />

    <cyb.xandroid.view.XTextView
        android:id="@+id/btn_6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/stv_1"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="5dp"
        android:text="Drawable2"
        android:textColor="#ED86AE"
        app:corner="50dp"
        app:drawableAsBackground="true"
        app:isShowState2="true"
        app:pressBgColor="@color/black"
        app:pressTextColor="@color/white"
        app:solid="@color/white"
        app:state_drawable="@drawable/avatar6"
        app:state_drawable2="@drawable/recousers"
        app:state_drawable2_height="20dp"
        app:state_drawable2_mode="rightTop"
        app:state_drawable2_width="20dp" />


    <cyb.xandroid.view.XTextView
        android:id="@+id/stv_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="多个Adjuster演示"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:corner="25dp"
        app:drawableAsBackground="true"
        app:solid="@color/white"
        app:state_drawable="@drawable/bige3" />


</RelativeLayout>
